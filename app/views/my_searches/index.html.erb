<p id="notice"><%= notice %></p>

<h1>Listing My Searches</h1>

<table>
  <thead>
    <tr>
      <th>Lost pet</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @my_searches.each do |my_search| %>
      <tr>
        <td><%= my_search.lost_pet %></td>
        <td><%= my_search.user %></td>
        <td><%= link_to 'Show', user_my_search_path(current_user,my_search) %></td>
        <td><%= link_to 'Edit', edit_user_my_search_path(current_user,my_search) %></td>
        <td><%= link_to 'Destroy', user_my_search_path(current_user,my_search), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New My search', new_user_my_search_path(current_user) %>
