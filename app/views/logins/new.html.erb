<h2>Log in</h2>

<%= simple_form_for :user, :url => '/login' do |f| %>
  <div class="form-inputs">
    <%= f.input :username, required: false, autofocus: true %>
    <%= f.input :password, required: false %>
    
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>

