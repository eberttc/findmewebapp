<%= simple_form_for [@lost_pet,@comment], :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :comment %>
  <%= error_span(@comment[:comment]) %>
  <%= f.input :founded  , :collection => ['SI', 'NO'] , :as => :radio_buttons %>
  <%= error_span(@comment[:founded]) %>
  <%= f.input :lost_pet_id , as: :hidden , :input_html => { :value => "#{@lost_pet.id}"}%>
  <%= error_span(@comment[:lost_pet_id]) %>
  <%= f.input :user_id , as: :hidden , :input_html => { :value => "#{current_user.id}"}%>
  <%= error_span(@comment[:user_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                lost_pet_comments_path(@lost_pet,@my_search), :class => 'btn btn-default' %>
<% end %>
